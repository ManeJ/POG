              <div class="button-home-2">Ask for help</div>
            <% end %>
            <div class="right-frills frills2"></div>
          </div>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col mt-5">
      <div class="d-flex justify-content-center">
        <%= link_to "Sign-up", new_user_registration_path, class:"home-links home-sign mr-2" %>
          <p>  |  </p>
        <%= link_to "Sign-in", new_user_session_path, class:"home-links home-sign ml-2" %>
      </div>
    </div>
  </div>
