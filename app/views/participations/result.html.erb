<h1><%= @quest.title %></h1>
<p>Review by <%= @quest.user.username %></p>

<% if @review.nil? %>
  <p>No review yet.</p>
<% else %>
  <p>Sent on: <%= @review.created_at.strftime("%d/%m/%Y") %></p>
  <% @review.rating.times do  %>
    <%= image_tag('rating-color.png') %>
  <% end %>
  <% @review.blank_stars.times do %>
    <%= image_tag('rating-color.png', id:"blank_star") %>
  <% end %>
  <p>Comment:</p>
  <%= @review.content %>
<% end %>
