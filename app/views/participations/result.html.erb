<div class="page-pog">
  <h1 class="text-center px-4 pb-0">Review</h1>
  <% if @review.nil? %>
    <p>No review yet.</p>
  <% else %>
      <div class="contact-area">
        <div class="contact py-4">
          <main>
            <div class="card-player-reviews">
              <div class="content">
                <aside>
                  <div class="d-flex flex-column justify-content-center align-items-center">
                    <p class="mb-0 font-italic">By #<%= @quest.user.username %></p>
                    <h2><%= @quest.title %></h2>
                    <div>
                      <% @review.rating.times do  %>
                        <%= image_tag('star-plain.png', class:"rating_ico") %>
                      <% end %>
                      <% @review.blank_stars.times do %>
                        <%= image_tag('star-blank.png', id:"blank_star", class:"rating_ico") %>
                      <% end %>
                    </div>
                    <p class="font-italic">
                      <!-- <i class="fas fa-quote-left"></i> -->
                      " <%= @review.content %> "
                      <!-- <i class="fas fa-quote-right"></i> -->
                    </p>
                    <p>(<%= @review.created_at.strftime("%d/%m/%Y") %>)</p>
                  </div>
                </aside>
              </div>
            </div>
          </main>
        </div>
      </div>
<!--       <div class="d-flex justify-content-center">
        <%#= link_to participations_path do %>
          <i class="fas fa-backward"></i>
        <%# end %>
      </div> -->
    </div>
  <% end %>
