
<div id="participations-header" class="text-center" >
  <h2>My participations</h2>
</div>
<div class="container">
    <div>
      <div class="my-participations">
        <h3>Your next quests</h3>
        <% if policy(participation)? %>
          <% @participations.each do |participation| %>
            <div class="next-participation">
              <%= link_to "Edit", "#", class: "btn btn-info btn-top" %>
              <%= cl_image_tag quest.photo, class: 'my-participation-img'%>
              <div class="participation info">
                <h2 class="quest-name"><%= quest.name %></h2>
                <%= link_to "See more details", quest_path(quest) %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>