<div class="page-pog page-qm">
  <h1 class="text-center">Create your quest</h1>
  <div class="d-flex flex-column align-items-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 px-4 form">
      <%= simple_form_for(@quest, url: questmaster_quests_path, method: :post) do |f| %>
        <div class="form-inputs">
          <%= f.input :title %>
          <%= f.association :category %>
          <%= f.input :mode,
                      collection: ["Solo", "Group"] %>
          <%= f.input :people_wanted,
                      label: "People expected" %>
          <%= f.input :description,
                      hint: "200 characters max.",
                      label: "Quest details",
                      input_html: {class: "form-text-area"} %>
          <%= f.input :address,
                      { id: "quest_address" } %>
          <%= f.input :begin_on,
                      as: :string,
                      required: false,
                      label: "Choose a date",
                      input_html: {class: "datepicker"} %>
          <%= f.input :duration %>
        </div>

        <div class="form-actions d-flex justify-content-center" id="unclickable-on-phone">
          <%= f.button :submit, "Create quest", class:"btn btn-primary mb-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
