<div class="page-pog">
  <div class="d-flex justify-content-center flex-column align-items-center">
    <div class="text-center px-3">
      <h1 class="mb-5">Review update</h1>
    </div>
    <div class="global-review-container mb-5">
       <%= simple_form_for([@quest, @review], url: questmaster_quest_participation_review_path(@quest), method: :patch) do |f| %>
        <%= f.error_notification %>
        <h3 class="text-center">#<%= @participation.user.username %></h3>
        <p class="text-center mb-4">For " <%= @quest.title %> "</p>
        <div class="d-flex justify-content-center align-items-center flex-wrap px-4">
          <%= f.collection_radio_buttons :rating, [[1], [2], [3], [4], [5]], :first, :last, item_wrapper_tag: false, boolean_style: :inline do |b| %>
              <%= b.radio_button + b.label {image_tag("rating-#{b.text}.png", class:"ml-3")} %>
          <% end %>
        </div>
        <div class="mt-3">
          <%= f.input :content, label: "Comment", hint: "200 characters max." %>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.button :submit, "Update review", class:"btn btn-primary mb-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
