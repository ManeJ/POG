<div class="row nav-space"></div>
<div class="d-flex justify-content-center flex-column mt-5 align-items-center">
  <h2 class="mb-4">Review update for "<%= @participation.user.username %>"</h2>
  <p>Related quest: "<%= @quest.title %>"</p>

  <div class="global-review-container">
     <%= simple_form_for([@quest, @review], url: questmaster_quest_participation_review_path(@quest), method: :patch) do |f| %>
      <%= f.error_notification %>
      <%= f.collection_radio_buttons :rating, [[1], [2], [3], [4], [5]], :first, :last, item_wrapper_tag: false, boolean_style: :inline do |b| %>
          <%= b.radio_button + b.label {image_tag("rating-#{b.text}.png")} %>
      <% end %>
      </br></br>
      <%= f.input :content, label: "Comment", hint: "200 characters max." %>
      <div class="d-flex justify-content-center">
        <%= f.button :submit, "Update review", class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
<!--   <#% if @quest.participations.count > 1 && @quest.participations.last != @participation %>
    <%#= link_to "Next participant", "#", class: "mt-3"  %>
  <%# end %> -->
  <%= link_to "Back to participants for #{@quest.title}", questmaster_quest_participations_path(@quest), class: "mt-3" %>
  <%= link_to "Back to my quests", questmaster_quests_path, class: "mt-3" %>

</div>
<div class="row footer-space"></div>
