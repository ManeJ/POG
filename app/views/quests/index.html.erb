<div class="wrapper-bars"></div>
<div class="wrapper-page-content">
  <div class="row-map">
    <div id="quests-index">
      <div id="map-or-list">
            <a class="btn-ghost" id="map-display">Map</a>
            <a class="btn-ghost" id="list-display">List</a>
      </div>
      <div
        id="map"
        style="width: 100%;
        height: 80vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      <div id="list">

        <%  Category.all.each do |category| %>
          <nav class="index-category navbar ">
            <div class="burger-category">
              <div>
                <%= image_tag(category.picture) %>
              </div>
                <a class="navbar-brand" href="#"><%=category.name %></a>
              <button class="navbar-toggler toggler-example" type="button" data-toggle="collapse" data-target="#navbarSupportedContent1"
                aria-controls="navbarSupportedContent1" aria-expanded="false" aria-label="Toggle navigation"><span class="dark-blue-text"><i
                    class="fas fa-bars fa-1x"></i></span></button>
            </div>

            <div class="collapse navbar-collapse" id="navbarSupportedContent1">
              <% @quests.each do |quest| %>
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <%= render 'info_index_per_category' %>
                  </div>
                </div>
              <% end %>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </nav>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="wrapper-bars"></div>




