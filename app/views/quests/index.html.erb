<div class="page-pog" id="page-map">
  <div id="quests-index">
    <div id="map-or-list">
          <a class="border-bottom border-primary" id="map-display"><strong>Map</strong></a>
          <a class="border-bottom border-primary" id="list-display"><strong>List</strong></a>
    </div>
    <div
      id="map"
      style="width: 100%;
      height: 80vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    <div id="list">

      <%  Category.all.each do |category| %>
        <nav class="index-category navbar">
          <div class="burger-category d-flex justify-content-center w-100" id="burgers">
              <div class="rounded-circle p-2 burger-img">
                <%= image_tag(category.picture) %>
              </div>
              <h3 class="navbar-brand"><%=category.name %></h3>
            <button class="navbar-toggler toggler-example" data-categoryid="<%= category.id %>" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-<%= category.id %>"
              aria-controls="navbarSupportedContent-<%= category.id %>" aria-expanded="false" aria-label="Toggle navigation"><span class="dark-blue-text"><i
                  class="fas fa-bars fa-1x"></i></span></button>
          </div>

          <div class="collapse navbar-collapse" id="navbarSupportedContent-<%= category.id %>">


            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <%= render "carousel", quests: category.quests %>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </nav>
      <% end %>
    </div>
  </div>
</div>





