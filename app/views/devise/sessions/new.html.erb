<div class="wrapper-page-content">
  <h2 class="text-center mt-5">Log in</h2>
  <div class="d-flex flex-column align-items-center">
    <div class="col-10 col-md-6 p-3 form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
          <%= f.error_notification %>
          <%= f.input :email,
              required: false,
              label: false, placeholder: "Email",
              autofocus: true,
              input_html: { autocomplete: "email", class:"mt-3" } %>
          <%= f.input :password,
              required: false,
              label: false, placeholder: "Password",
              input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, "Log in", class:"btn btn-primary" %>
      </div>
      <% end %>
    </div>
    <div class="mt-2 text-center">
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
